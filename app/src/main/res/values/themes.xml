<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShikimoriAppTheme.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="textAppearanceHeadline6">@style/ToolbarTextAppearance</item>

        <item name="md_corner_radius">8dp</item>
        <item name="android:popupMenuStyle">@style/PopupMenuTheme</item>
        <item name="popupMenuStyle">@style/PopupMenuTheme</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
        <item name="actionOverflowButtonStyle">@style/Toolbar.Button.Overflow.Tinted</item>
    </style>

    <style name="ShikimoriAppTheme.Launch" parent="ShikimoriAppTheme.Base">
        <item name="colorPrimary">@color/default_colorPrimary</item>
        <item name="colorPrimaryDark">@color/default_colorPrimaryVariant</item>
        <item name="colorSecondary">@color/default_colorSecondary</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="ShikimoriAppTheme.Default" parent="ShikimoriAppTheme.Base">
        <item name="colorPrimary">@color/default_colorPrimary</item>
        <item name="colorPrimaryVariant">@color/default_colorPrimaryVariant</item>
        <item name="colorSecondary">@color/default_colorSecondary</item>
        <item name="colorSurface">@color/default_colorSurface</item>
        <item name="android:colorBackground">@color/default_colorBackground</item>
        <item name="colorSecondaryTransparent">@color/default_colorSecondaryTransparent</item>

        <item name="colorOnPrimary">@color/default_colorOnPrimary</item>
        <item name="colorOnPrimarySecondary">@color/default_colorOnPrimarySecondary</item>
        <item name="colorOnPrimaryDisabled">@color/default_colorOnPrimaryDisabled</item>
        <item name="colorOnSecondary">@color/default_colorOnSecondary</item>
        <item name="colorOnSurface">@color/default_colorOnSurface</item>
        <item name="colorOnBackground">@color/default_colorOnBackground</item>
        <item name="colorDivider">@color/default_colorDivider</item>

        <item name="android:textColor">@color/default_colorOnSurface</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimarySecondary</item>
        <item name="android:windowBackground">@color/default_colorBackground</item>

        <item name="colorPrimaryDark">@color/default_colorPrimaryVariant</item>
        <item name="md_background_color">@color/default_colorBackground</item>

        <item name="dialogCustomBackground">@drawable/dialog_surface</item>
        <item name="colorControlHighlight">@color/default_colorRipple</item>
    </style>

    <style name="ShikimoriAppTheme.Dark" parent="ShikimoriAppTheme.Base">
        <item name="colorPrimary">@color/dark_colorPrimary</item>
        <item name="colorPrimaryVariant">@color/dark_colorPrimaryVariant</item>
        <item name="colorSecondary">@color/dark_colorSecondary</item>
        <item name="colorSurface">@color/dark_colorSurface</item>
        <item name="android:colorBackground">@color/dark_colorBackground</item>
        <item name="colorSecondaryTransparent">@color/dark_colorSecondaryTransparent</item>

        <item name="colorOnPrimary">@color/dark_colorOnPrimary</item>
        <item name="colorOnPrimarySecondary">@color/dark_colorOnPrimarySecondary</item>
        <item name="colorOnPrimaryDisabled">@color/dark_colorOnPrimaryDisabled</item>
        <item name="colorOnSecondary">@color/dark_colorOnSecondary</item>
        <item name="colorOnSurface">@color/dark_colorOnSurface</item>
        <item name="colorOnBackground">@color/dark_colorOnBackground</item>
        <item name="colorDivider">@color/dark_colorDivider</item>

        <item name="android:textColor">@color/dark_colorOnSurface</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimarySecondary</item>
        <item name="android:windowBackground">@color/dark_colorBackground</item>

        <item name="colorPrimaryDark">@color/dark_colorPrimaryVariant</item>
        <item name="md_background_color">@color/dark_colorBackground</item>

        <item name="dialogCustomBackground">@drawable/dialog_surface_dark</item>
        <item name="colorControlHighlight">@color/dark_colorRipple</item>
    </style>

</resources>