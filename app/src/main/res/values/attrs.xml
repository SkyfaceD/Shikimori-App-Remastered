<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="colorSecondaryTransparent" format="color" />
    <attr name="colorOnPrimarySecondary" format="color"/>
    <attr name="colorDivider" format="color"/>
    <attr name="colorTransparentBackground" format="color"/>
    <attr name="colorOnTransparentBackground" format="color"/>
    <attr name="colorDialogSurface" format="color"/>

    <attr name="dialogCustomBackground" format="reference"/>

    <attr name="rateStyleStrokeWidth" format="dimension"/>

    <declare-styleable name="RateSpinnerView">
        <attr name="anime" format="boolean" />
        <attr name="showEdit" format="boolean" />
        <attr name="showIcon" format="boolean" />
        <attr name="itemSize" format="enum">
            <enum name="small" value="0"/>
            <enum name="normal" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="NetworkErrorView">
        <attr name="text" format="string" />
    </declare-styleable>

    <declare-styleable name="ShikimoriContentView">
        <attr name="shikimori_content" format="string" />
        <attr name="expandable" format="boolean"/>
        <attr name="content_margin" format="dimension"/>
        <attr name="content_margin_top" format="dimension"/>
        <attr name="content_margin_left" format="dimension"/>
        <attr name="content_margin_right" format="dimension"/>
        <attr name="content_margin_bottom" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ThemeView">
        <attr name="appTheme" format="enum">
            <enum name="light" value="0" />
            <enum name="dark" value="1" />
            <enum name="amoled" value="2" />
        </attr>
    </declare-styleable>
</resources>
