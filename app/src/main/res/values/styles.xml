<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorBackground</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnAccent">@color/colorOnSurface</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="android:textColor">@color/colorOnSurface</item>

        <item name="colorRate">@color/rate_default</item>
        <item name="colorRateDark">@color/rate_default_dark</item>


        <item name="md_corner_radius">8dp</item>
        <item name="md_font_title">@font/open_sans_semibold</item>
    </style>

    <style name="PopupMenuTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:colorBackground">?colorSurface</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:background">@drawable/menu_rounded</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RateChooserTextAppearence">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextHeadlineStyle">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
