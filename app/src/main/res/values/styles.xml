<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="PopupMenuTheme" parent="Widget.AppCompat.ListPopupWindow">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:popupBackground">?attr/dialogCustomBackground</item>
        <item name="android:colorBackground">?attr/colorDialogSurface</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimarySecondary</item>
        <item name="actionMenuTextColor">?attr/colorOnPrimary</item>
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ToolbarSmallTextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MenuTextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="Toolbar.Button.Overflow.Tinted" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="RateChooserTextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="RateChooserTextAppearance.Normal" parent="RateChooserTextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RateChooserTextAppearance.Small" parent="RateChooserTextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextHeadlineStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TabsTextStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PlayerTitleTextAppearance" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/player_controls</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlayerSubTitleTextAppearance" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/player_controls</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ProfileLabelStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?attr/colorOnPrimarySecondary</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PlaceholderLabelStyle">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:background">@color/colorShimmer</item>
    </style>

    <style name="RateProgressCountStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="RateProgressLabelStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?attr/colorOnPrimarySecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CircleShapeAppearance" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerSizeBottomLeft">24dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>

    <style name="CircleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="backgroundTint">@drawable/selector_circle_button_background_color</item>
        <item name="iconTint">@drawable/selector_circle_button_text_color</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@drawable/selector_circle_button_text_color</item>
        <item name="strokeColor">@drawable/selector_circle_button_stroke_color</item>
        <item name="android:shadowColor">?attr/colorSecondaryTransparent</item>
        <item name="rippleColor">@drawable/selector_button_ripple_color</item>
        <item name="shapeAppearance">@style/CircleShapeAppearance</item>
    </style>

    <style name="FilledCircleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="backgroundTint">?attr/colorSecondaryTransparent</item>
        <item name="iconTint">?attr/colorSecondary</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:shadowColor">?attr/colorSecondaryTransparent</item>
        <item name="shapeAppearance">@style/CircleShapeAppearance</item>
    </style>

    <style name="AscentChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="checkedIcon">@drawable/ic_circle_check</item>
        <item name="checkedIconVisible">true</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="ensureMinTouchTargetSize">false</item>
    </style>

    <style name="ActionChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="chipBackgroundColor">@drawable/selector_action_chip_background_color</item>
        <item name="chipStrokeColor">@drawable/selector_action_chip_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="rippleColor">@drawable/selector_button_ripple_color</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">?attr/colorSecondaryTransparent</item>
    </style>

    <style name="FilterChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="chipBackgroundColor">@drawable/selector_filter_chip_background_color</item>
        <item name="chipStrokeColor">@drawable/selector_action_chip_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipIcon">@drawable/ic_minus</item>
        <item name="checkedIconEnabled">false</item>
        <item name="chipIconTint">?attr/colorSecondary</item>
        <item name="rippleColor">@drawable/selector_button_ripple_color</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">?attr/colorSecondaryTransparent</item>
    </style>

    <style name="EntryChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="chipBackgroundColor">?attr/colorSecondaryTransparent</item>
        <item name="chipStrokeColor">?attr/colorSecondaryTransparent</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipIconTint">?attr/colorSecondary</item>
        <item name="rippleColor">?attr/colorPrimary</item>
        <item name="closeIconTint">?attr/colorSecondary</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">?attr/colorSecondaryTransparent</item>
    </style>

    <style name="ActionUnelevatedButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@drawable/selector_action_button_text_color</item>
        <item name="backgroundTint">@drawable/selector_action_button_background_color</item>
        <item name="strokeColor">@drawable/selector_action_button_stroke_color</item>
        <item name="iconTint">@drawable/selector_action_button_text_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:padding">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="BackDropCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/BackDropShapeStyle</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="BackDropShapeStyle" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerSize">16sp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="RightRoundShapeStyle" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerSize">4dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="LeftRoundShapeStyle" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerSize">4dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?attr/colorOnPrimary</item>
    </style>

</resources>
