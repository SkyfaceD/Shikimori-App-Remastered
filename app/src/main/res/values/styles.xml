<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/default_colorPrimary</item>
        <item name="colorPrimaryDark">@color/default_colorPrimaryVariant</item>
        <item name="colorSecondary">@color/default_colorSecondary</item>

        <item name="colorOnPrimary">@color/default_colorOnPrimary</item>
        <item name="colorSecondaryVariant">@color/default_colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/default_colorOnSecondary</item>
        <item name="android:colorBackground">@color/default_colorBackground</item>
        <item name="android:windowBackground">@color/default_colorBackground</item>
        <item name="colorOnBackground">@color/default_colorOnBackground</item>
        <item name="colorBackground">@color/default_colorBackground</item>
        <item name="colorSurface">@color/default_colorSurface</item>
        <item name="colorOnSurface">@color/default_colorOnSurface</item>
        <item name="android:textColor">@color/default_colorOnSurface</item>
        <item name="textAppearanceHeadline6">@style/ToolbarTextAppearance</item>

        <item name="md_corner_radius">8dp</item>
        <item name="md_font_title">@font/open_sans_semibold</item>

        <item name="android:textColorPrimary">@color/default_colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnSecondary</item>
    </style>

    <style name="PopupMenuTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:colorBackground">?colorSurface</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:background">@drawable/menu_rounded</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RateChooserTextAppearance">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="RateChooserTextAppearance.Normal" parent="RateChooserTextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RateChooserTextAppearance.Small" parent="RateChooserTextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextHeadlineStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TabsTextStyle">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
