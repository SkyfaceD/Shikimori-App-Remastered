<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        android:icon="@drawable/icon_app_setting"
        android:key="general_fragment"
        android:summary="@string/settings_general_summary"
        android:title="@string/settings_general"
        app:fragment="com.gnoemes.shikimori.presentation.view.settings.fragments.SettingsGeneralFragment" />

    <Preference
        android:icon="@drawable/icon_anime_setting"
        android:key="anime_fragment"
        android:summary="@string/settings_anime_summary"
        android:title="@string/settings_anime"
        app:fragment="com.gnoemes.shikimori.presentation.view.settings.fragments.SettingsAnimeFragment" />

    <Preference
        android:icon="@drawable/icon_theme_setting"
        android:key="theme_fragment"
        android:summary="@string/settings_theme_summary"
        android:title="@string/settings_theme"
        app:fragment="com.gnoemes.shikimori.presentation.view.settings.fragments.SettingsThemeFragment" />

    <PreferenceCategory
        android:title="@string/settings_feedback"
        app:iconSpaceReserved="false">

        <Preference
            android:key="@string/settings_roadmap_key"
            android:title="@string/settings_roadmap_title"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/settings_about_send_key"
            android:title="@string/settings_about_send_title"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/settings_about_forum_key"
            android:title="@string/settings_about_forum_title"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/settings_club_key"
            android:title="@string/settings_club_title"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

</PreferenceScreen>