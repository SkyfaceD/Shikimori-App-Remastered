<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:foreground="?selectableItemBackgroundBorderless"
    android:padding="8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/imageContainerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/image_rate_width"
            android:layout_height="@dimen/image_rate_height"
            tools:src="@drawable/test_preview2" />

        <TextView
            android:id="@+id/typeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_protector_right"
            android:padding="4dp"
            android:textAllCaps="true"
            android:textColor="@color/colorOnProtector"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            tools:text="TV" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/nameView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageContainerView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Алиса или Алиса: Брат-сисконщик и сёстры близняшки" />

    <TextView
        android:id="@+id/ratingLabelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/rate_rating"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ratingView"
        app:layout_constraintStart_toStartOf="@+id/nameView"
        app:layout_constraintTop_toBottomOf="@+id/nameView"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/ratingView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/episodesLabelView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ratingLabelView"
        app:layout_constraintTop_toBottomOf="@+id/ratingLabelView"
        tools:text="Без оценки (0)" />

    <TextView
        android:id="@+id/episodesLabelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/common_episodes"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/episodesView"
        app:layout_constraintStart_toStartOf="@+id/nameView"
        app:layout_constraintTop_toBottomOf="@+id/ratingView" />

    <TextView
        android:id="@+id/episodesView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/rateSpinnerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/episodesLabelView"
        app:layout_constraintTop_toBottomOf="@+id/episodesLabelView"
        tools:text="0 / 25 (xxx)" />

    <TextView
        android:id="@+id/commentView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageContainerView"
        app:layout_constraintTop_toTopOf="@+id/barrier"
        tools:text="Гавно, но может кому-нибудь зайдет." />

    <com.gnoemes.shikimori.presentation.view.common.widget.RateSpinnerView
        android:id="@+id/rateSpinnerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:itemSize="small"
        app:layout_constraintBottom_toBottomOf="@+id/imageContainerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/episodesLabelView"
        app:layout_constraintTop_toBottomOf="@+id/episodesView"
        app:showIcon="false" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="imageContainerView, rateSpinnerView" />

    <ImageView
        android:id="@+id/watchView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:foreground="?selectableItemBackgroundBorderless"
        android:tint="?colorAccent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/rateSpinnerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideLine"
        app:layout_constraintTop_toTopOf="@+id/rateSpinnerView"
        app:srcCompat="@drawable/ic_play_circle_outline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>