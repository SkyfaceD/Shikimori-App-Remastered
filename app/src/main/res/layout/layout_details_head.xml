<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/details_head_background_gradient"
    android:paddingStart="24dp"
    android:paddingTop="12dp"
    android:paddingEnd="24dp">

    <include
        android:id="@+id/headContent"
        layout="@layout/layout_details_head_content"
        android:visibility="gone"
        tools:visibility="visible" />

    <include
        android:id="@+id/headPlaceholder"
        layout="@layout/layout_details_head_placeholder"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
